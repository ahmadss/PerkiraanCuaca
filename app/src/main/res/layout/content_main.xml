<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ff1ba1ee"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.androidlokomedia.perkiraancuaca.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jakarta, UK"
        android:textStyle="bold"
        android:id="@+id/kotaText"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textSize="20sp"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:id="@+id/thumbnailIcon"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 Deg"
        android:textStyle="normal"
        android:layout_below="@+id/kotaText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="45sp"
        android:textColor="#fff"
        android:id="@+id/tempText"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wind"
        android:textStyle="normal"
        android:layout_below="@+id/thumbnailIcon"
        android:layout_marginTop="25dp"
        android:textSize="16sp"
        android:textColor="#fff"
        android:id="@+id/windText"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cloud"
        android:textStyle="normal"
        android:layout_below="@+id/windText"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="#fff"
        android:id="@+id/cloudText"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presure"
        android:textStyle="normal"
        android:layout_below="@+id/cloudText"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="#fff"
        android:id="@+id/presureText"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity"
        android:textStyle="normal"
        android:layout_below="@+id/presureText"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="#fff"
        android:id="@+id/humidText"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunrise"
        android:textStyle="normal"
        android:layout_below="@+id/humidText"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="#fff"
        android:id="@+id/riseText"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunset"
        android:textStyle="normal"
        android:layout_below="@+id/riseText"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="#fff"
        android:id="@+id/setText"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Updated"
        android:textStyle="normal"
        android:layout_below="@+id/setText"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#fff"
        android:id="@+id/updateText"/>

</RelativeLayout>
